---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
const { title, description, image, rotation } = Astro.props;

const images = import.meta.glob<{ default: ImageMetadata }>(
  "/src/assets/eventTrack/*.{jpeg,jpg,png,gif}"
);
---

<div
  class="w-[90vw] lg:w-[65ch] flex flex-col lg:grid h-full"
  style={`rotate: ${rotation}deg`}
>
  <div class="aspect-video col-start-1 row-start-1 grid">
    <div class="w-full h-full col-start-1 row-start-1 z-10 shade rounded-2xl">
    </div>
    <Image
      src={images[`/src/assets/eventTrack/${image}`]()}
      alt={title || ""}
      class="aspect-video object-cover col-start-1 row-start-1 rounded-2xl"
    />
  </div>
  <div
    class="col-start-1 lg:row-start-1 self-start lg:self-end lg:p-8 p-4 z-20 w-[90vw] lg:w-[55ch]"
  >
    <h3 class="text-cream-100 font-bold text-4xl text-balance mb-2">
      {title}
    </h3>
    <p class="text-balance">{description}</p>
  </div>
</div>

<style>
  .shade {
    background: linear-gradient(to top right, black 0%, transparent 75%);
  }
</style>
